<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Imagen Superior -->

            <!-- Campo Edad -->
            <ImageView
                android:id="@+id/imgHeader"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/perroheader" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edad del perro:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/etEdad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingresa la edad (años)"
                android:inputType="number"/>

            <!-- Título Tamaño -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tamaño del perro:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp"/>

            <!-- RadioGroup -->
            <RadioGroup
                android:id="@+id/rgTamaño"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rbPequeño"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pequeño (≤10kg)"/>

                <RadioButton
                    android:id="@+id/rbMediano"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mediano (11-25kg)"/>

                <RadioButton
                    android:id="@+id/rbGrande"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grande (26-40kg)"/>

                <RadioButton
                    android:id="@+id/rbGigante"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gigante (≥41kg)"/>
            </RadioGroup>

            <!-- Resultado -->
            <TextView
                android:id="@+id/tvResultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edad en años humanos:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>

            <!-- Botón -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCalcular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CALCULAR EDAD"
                android:layout_marginTop="20dp"
                android:backgroundTint="#FF3D00"
                android:textColor="@android:color/white"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>